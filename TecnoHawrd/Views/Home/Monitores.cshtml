
@{
    ViewBag.Title = "Monitores";
}

<h2>Productos > Monitores</h2>

<!DOCTYPE html>
<html lang="es">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    <!--carrusel-->
    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->

            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->

            <div class="carousel-inner">
                <div class="item active">
                    <p style="text-align:center"><img src="~/Images/View-Products/Productos/Monitores (2).png" alt="Monitores2" width="500" height="500"></p>
                    <div class="carousel-caption">
                        <h3 style="color:black">Monitor ACER Gamer 23.8" Pulgadas FHD QG241Y BII Negro</h3>
                        <p style="color:black"> </p>
                    </div>
                </div>

                <div class="item">
                    <p style="text-align:center"><img src="~/Images/View-Products/Productos/Monitores (4).png" alt="Monitores4" width="500" height="500"></p>
                    <div class="carousel-caption">
                        <h3 style="color:black">Monitor HP 27" Pulgadas FHD M27 fw Blanco</h3>
                        <p style="color:black"> </p>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->

            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
            <hr />
        </div>
    </div>



    <!--Productos-->
    <div class="container">
        <div class="jumbotron">
            <div class="row">

                <div class="col-sm-4">
                    <div class="thumbnail">
                        <img src="~/Images/View-Products/Productos/Monitores (1).png" alt="Monitores1" width="200" height="200">
                        <h3 style="text-align:center; font-size:30px">Monitor HUAWEI 34" Pulgadas Mateview GT Negro</h3>
                        <p style="text-align:center; font-size:18px; color:red">‎ <p style="color:black; text-align:center; font-size:23px">$2.499.900</p></p>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="thumbnail">
                        <img src="~/Images/View-Products/Productos/Monitores (2).png" alt="Monitores2" width="200" height="200">
                        <h3 style="text-align:center; font-size:30px">Monitor ACER Gamer 23.8" Pulgadas FHD QG241Y BII Negro</h3>
                        <p style="text-align:center; font-size:18px; color:red">Antes:$$999.000<p style="color:green; text-align:center; font-size:23px">Ahora:$649.000</p></p>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="thumbnail">
                        <img src="~/Images/View-Products/Productos/Monitores (3).png" alt="Monitores3" width="200" height="200">
                        <h3 style="text-align:center; font-size:30px">Monitor HP Gamer 21.5" Pulgadas M22f Negro</h3>
                        <p style="text-align:center; font-size:18px; color:red">Antes:$909.900<p style="color:green; text-align:center; font-size:23px">Ahora:$679.000</p></p>
                    </div>
                </div>

            </div>

            <div class="row">

                <div class="col-sm-4">
                    <div class="thumbnail">
                        <img src="~/Images/View-Products/Productos/Monitores (4).png" alt="Monitores4" width="200" height="200">
                        <h3 style="text-align:center; font-size:30px">Monitor HP 27" Pulgadas FHD M27 fw Blanco</h3>
                        <p style="text-align:center; font-size:18px; color:red">‎ <p style="color:black; text-align:center; font-size:23px">$999.000</p></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
