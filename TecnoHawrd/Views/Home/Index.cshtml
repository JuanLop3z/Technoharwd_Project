
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    <!--carrusel-->
    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->

            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->

            <div class="carousel-inner">
                <div class="item active">
                    <p style="text-align:center"><img src="~/Images/View-Products/Productos/Televisores (4).png" alt="TV" width="550" height="550"></p>
                    <div class="carousel-caption">
                        <h3 style="color:black">TV LG 55" Pulgadas 139 cm OLED55A2PSA 4K-UHD OLED Plano Smart TV</h3>
                        <p style="color:black">Todo lo que nesesitas</p>
                    </div>
                </div>

                <div class="item">
                    <p style="text-align:center"><img src="~/Images/View-Products/Productos/Audifonos (3).png" alt="Audi" width="550" height="550"></p>
                    <div class="carousel-caption">
                        <h3 style="color:black">Audífonos APPLE AirPods Tercera Generación Blancos Cancelacion de Ruido</h3>
                        <p style="color:black">La mejor impresora del mercado</p>
                    </div>
                </div>

                <div class="item">
                    <p style="text-align:center"><img src="~/Images/View-Products/Productos/Camara (2).png" alt="Camara" width="550" height="550"></p>
                    <div class="carousel-caption">
                        <h3 style="color:black">Cámara Fotográfica semiprofesional CANON EOS RP RF24-105 STM Negro</h3>
                        <p style="color:black">Fotos de calidad optima</p>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->

            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
            <hr />
        </div>
    </div>



    <!--buscadores-->
    <div class="container">
        <div class="jumbotron">
            <div class="row">
                <div class="col-sm-3">
                    <div class="thumbnail">
                        <img src="~/Images/Iconos-header/Icono-Productos.png" alt="Productos" width="100" height="100">
                        <ul>
                            <li><h3>@Html.ActionLink("Productos", "Productos", "Home")</h3></li>
                        </ul>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="thumbnail">
                        <img src="~/Images/Iconos-header/Icono-Ofertas.png" alt="Ofertas" width="117" height="100">
                        <ul>
                            <li><h3>@Html.ActionLink("Ofertas", "Ofertas", "Home")</h3></li>
                        </ul>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="thumbnail">
                        <img src="~/Images/Iconos-header/Icono-Nosotros.png" alt="Nosotros" width="100" height="100">
                        <ul>
                            <li><h3>@Html.ActionLink("Nosotros", "Nosotros", "Home")</h3></li>
                        </ul>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="thumbnail">
                        <img src="~/Images/Iconos-header/Icono-Contactenos.png" alt="Contactenos" width="100" height="100">
                        <ul>
                            <li><h3>@Html.ActionLink("Contactenos", "Contactenos", "Home")</h3></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
