
@{
    ViewBag.Title = "Audio";
}

<h2>Productos > Audio</h2>

<!DOCTYPE html>
<html lang="es">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    <!--carrusel-->
    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->

            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->

            <div class="carousel-inner">
                <div class="item active">
                    <p style="text-align:center"><img src="~/Images/View-Products/Productos/Audifonos (2).png" alt="Audifonos2"width="500" height="500"></p>
                    <div class="carousel-caption">
                        <h3 style="color:black">Audífonos de Diadema SONY Inalámbricos Bluetooth con Cancelación de Ruido Gris</h3>
                        <p style="color:black"> </p>
                    </div>
                </div>

                <div class="item">
                    <p style="text-align:center"><img src="~/Images/View-Products/Productos/Audifonos (4).png" alt="Audifonos4" width="750" height="500"></p>
                    <div class="carousel-caption">
                        <h3 style="color:black">Audífonos SAMSUNG Galaxy Buds Pro Morado</h3>
                        <p style="color:black"> </p>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->

            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
            <hr />
        </div>
    </div>



    <!--Productos-->
    <div class="container">
        <div class="jumbotron">
            <div class="row">

                <div class="col-sm-4">
                    <div class="thumbnail">
                        <img src="~/Images/View-Products/Productos/Audifonos (1).png" alt="Audifonos1" width="200" height="200">
                        <h3 style="text-align:center; font-size:30px">Audífonos SAMSUNG Inalámbricos Bluetooth In Ear Galaxy Buds 2 Negro</h3>
                        <p style="text-align:center; font-size:18px; color:red">‎ <p style="color:black; text-align:center; font-size:23px">$349.900</p></p>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="thumbnail">
                        <img src="~/Images/View-Products/Productos/Audifonos (2).png" alt="Audifonos2" width="200" height="200">
                        <h3 style="text-align:center; font-size:30px">Audífonos de Diadema SONY Inalámbricos Bluetooth Cancelación de Ruido Gris</h3>
                        <p style="text-align:center; font-size:18px; color:red">Antes:$1.799.900<p style="color:green; text-align:center; font-size:23px">Ahora:$1.099.900</p></p>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="thumbnail">
                        <img src="~/Images/View-Products/Productos/Audifonos (3).png" alt="Audifonos3" width="200" height="200">
                        <h3 style="text-align:center; font-size:30px">Audífonos APPLE AirPods Tercera Generación Blancos Cancelacion de Ruido</h3>
                        <p style="text-align:center; font-size:18px; color:red">Antes:$899.000<p style="color:green; text-align:center; font-size:23px">Ahora:$849.000</p></p>
                    </div>
                </div>

            </div>

            <div class="row">

                <div class="col-sm-4">
                    <div class="thumbnail">
                        <img src="~/Images/View-Products/Productos/Audifonos (4).png" alt="Audifonos4" width="200" height="200">
                        <h3 style="text-align:center; font-size:30px">Audífonos SAMSUNG Galaxy Buds Pro Morado</h3>
                        <p style="text-align:center; font-size:18px; color:red">‎ <p style="color:black; text-align:center; font-size:23px">$499.900</p></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>